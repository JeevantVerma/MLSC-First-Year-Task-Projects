<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_custom"
    android:visibility="visible"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputBar"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/text_custom"
        android:ems="10"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22000003"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_marginTop="150dp"
        android:orientation="horizontal"
        android:padding="10dp"
        app:constraint_referenced_ids="bt_exit,bt_clear,bt_backspace,bt_1,bt_2,bt_3,bt_4,bt_5,bt_6,bt_7,bt_8,bt_9,bt_plus,bt_0,bt_minus,bt_multiply,bt_divide,bt_equal"
        app:flow_maxElementsWrap="3"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_backspace"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_clear"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="C"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_exit"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:capitalize="characters"
        android:padding="5dp"
        android:text="Exit"
        android:textAllCaps="false"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_1"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="1"
        android:textColor="#FBFBFB"
        android:textSize="24sp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_2"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="2"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_3"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="3"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_4"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="4"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_5"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="5"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_6"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="6"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_7"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="7"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_8"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="8"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_9"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="9"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_plus"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="+"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_0"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="0"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_minus"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="-"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_multiply"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="*"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_divide"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="/"
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_equal"
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_custom"
        android:padding="5dp"
        android:text="="
        android:textColor="#FBFBFB"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculater"
        android:textColor="#FB9A09"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/inputBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>